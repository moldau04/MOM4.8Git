<!-- Hidden Field -->
@Html.Hidden("hdnAddVendors","Y")
@Html.Hidden("hdnEditVendors","Y")
@Html.Hidden("hdnDeleteVendors","Y")
@Html.Hidden("hdnViewVendors","Y")

<script type="text/javascript">
    function AddVendorsClick(hyperlink) {
        var id = $("#hdnAddVendors").val();
        if (id == "Y") {
            return true;
        } else {
            noty({ text: 'You do not have permission!', type: 'warning', layout: 'topCenter', closeOnSelfClick: true, timeout: 5000, theme: 'noty_theme_default', closable: false, dismissQueue: true });
            return false;
        }
    }
    function EditVendorsClick(hyperlink) {

        var id = $("#hdnEditVendors").val();
        if (id == "Y") { return true; } else {
            noty({ text: 'You do not have permission!', type: 'warning', layout: 'topCenter', closeOnSelfClick: true, timeout: 5000, theme: 'noty_theme_default', closable: false, dismissQueue: true });
            return false;
        }
    }
    function DeleteVendorsClick(hyperlink) {
        var id = $("#hdnDeleteVendors").val();
        if (id == "Y") {
            return SelectedRowDelete("#RadGrid_Vendor", "Vendor");
        } else {
            noty({ text: 'You do not have permission!', type: 'warning', layout: 'topCenter', closeOnSelfClick: true, timeout: 5000, theme: 'noty_theme_default', closable: false, dismissQueue: true });
            return false;
        }
    }

    function clear() {
        ("#ddlType");
    }
    function jsFunction(value) {
        alert(value);

        if (value == "Rol.Type") {
            //$(txtSearch).val("");
            //$('#searchField').attr("value", "");
            $("#txtSearch").val("");
            $("#ddlType").css('display','block');
            $("#ddlStatus").css('display','none');
            $("#txtSearch").css('display','none');

        }
        else if (value == "Vendor.Status") {
            //$(txtSearch).val("");
            $("#txtSearch").val("");
            $("#ddlType").css('display','none');
            $("#ddlStatus").css('display','block');
            $("#txtSearch").css('display','none');

        }
        else {
            $("#ddlType").css('display','none');
            $("#ddlStatus").css('display','none');
            $("#txtSearch").css('display','block');
        }

    }

</script>


